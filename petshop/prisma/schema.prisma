// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  cpf      String @unique
  telefone String
  endereco String
  numero   Int
  bairro   String
  cidade   String

  Animal Animal[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("clientes")
}

model Animal {
  id      Int    @id @default(autoincrement())
  nome    String
  sexo    String
  especie String
  raca    String

  cliente    Cliente @relation(fields: [cliente_id], references: [id])
  cliente_id Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("animais")
}
